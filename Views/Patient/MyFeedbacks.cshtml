@model IEnumerable<HealthcareAppointmentSystem.Models.Feedback>
@{
    ViewData["Title"] = "My Feedbacks";
}

<div class="container mt-4">
    <h2 class="mb-4">My Feedbacks</h2>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var feedback in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Dr. @feedback.Doctor?.User?.FirstName @feedback.Doctor?.User?.LastName</h5>
                            <small class="text-muted">@feedback.Doctor?.Specialty?.Name</small>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <strong>Rating:</strong>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= feedback.Rating)
                                    {
                                        <span>⭐</span>
                                    }
                                    else
                                    {
                                        <span style="opacity: 0.3;">⭐</span>
                                    }
                                }
                                <span class="ms-2">(@feedback.Rating/5)</span>
                            </div>

                            @if (!string.IsNullOrEmpty(feedback.Comments))
                            {
                                <div class="mb-2">
                                    <strong>Comments:</strong>
                                    <p class="mb-0">@feedback.Comments</p>
                                </div>
                            }

                            @if (feedback.Appointment != null)
                            {
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <strong>Appointment Date:</strong> @feedback.Appointment.AppointmentDate.ToString("MMMM dd, yyyy")
                                    </small>
                                </div>
                            }

                            <div class="mt-2">
                                <small class="text-muted">
                                    <strong>Submitted:</strong> @feedback.CreatedAt.ToString("MMMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">You haven't left any feedback yet.</p>
            <p class="mb-0">After completing an appointment, you can leave feedback for the doctor.</p>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Appointments" class="btn btn-secondary">Back to Appointments</a>
    </div>
</div>
