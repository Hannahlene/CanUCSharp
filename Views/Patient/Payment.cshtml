@model HealthcareAppointmentSystem.Models.Appointment
@{
    ViewData["Title"] = "Payment";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Appointment Summary</h5>
                <p><strong>Doctor:</strong> Dr. @Model.Doctor?.User?.FirstName @Model.Doctor?.User?.LastName</p>
                <p><strong>Specialty:</strong> @Model.Doctor?.Specialty?.Name</p>
                <p><strong>Date:</strong> @Model.AppointmentDate.ToShortDateString()</p>
                <p><strong>Time:</strong> @Model.TimeSlot</p>
                <p><strong>Consultation Fee:</strong> $@Model.Doctor?.ConsultationFee</p>
                <hr />
                <h4>Total: $@Model.Doctor?.ConsultationFee</h4>
                <form asp-action="CreateCheckoutSession" method="post">
                    <input type="hidden" name="appointmentId" value="@Model.Id" />
                    <button type="submit" class="btn btn-success btn-lg w-100">Pay Now with Stripe</button>
                </form>
            </div>
        </div>
    </div>
</div>
