@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">

    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to MediCare Healthcare</h1>
        <p class="lead text-muted">Your trusted partner in healthcare management</p>
        <p>Book appointments with top doctors, manage your medical records, and access quality healthcare services.</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2 shadow-sm">Get Started</a>
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg shadow-sm">Sign In</a>
    </div>

    <!-- User Roles Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-scale">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">For Patients</h5>
                    <p class="card-text text-muted">Search for doctors, book appointments, and manage your healthcare needs.</p>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary me-2">Register</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">Sign In</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-scale">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">For Doctors</h5>
                    <p class="card-text text-muted">Manage your appointments, update patient records, and control your schedule.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success">Doctor Sign In</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-scale">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">For Administrators</h5>
                    <p class="card-text text-muted">Manage doctors, patients, appointments, and system settings.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-warning">Admin Sign In</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Specialties Section -->
    <div class="mb-5">
        <h3 class="mb-4 text-center fw-bold">Our Specialties</h3>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card h-100 text-center border-0 shadow-sm hover-scale">
                    <div class="card-body">
                        <h5 class="fw-bold">General Medicine</h5>
                        <p class="text-muted">Comprehensive primary care</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 text-center border-0 shadow-sm hover-scale">
                    <div class="card-body">
                        <h5 class="fw-bold">Cardiology</h5>
                        <p class="text-muted">Heart health specialists</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 text-center border-0 shadow-sm hover-scale">
                    <div class="card-body">
                        <h5 class="fw-bold">Dermatology</h5>
                        <p class="text-muted">Skin care experts</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 text-center border-0 shadow-sm hover-scale">
                    <div class="card-body">
                        <h5 class="fw-bold">Pediatrics</h5>
                        <p class="text-muted">Child healthcare</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Test Accounts -->

</div>

<style>
/* Modern hover effect for cards */
.hover-scale {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.hover-scale:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
}

/* Gradient button */
.btn-primary {
    background: linear-gradient(90deg, #4e54c8, #8f94fb);
    border: none;
}
.btn-primary:hover {
    background: linear-gradient(90deg, #8f94fb, #4e54c8);
}

/* Shadow for hero buttons */
.btn-lg.shadow-sm {
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}
</style>
